<div>
    <div class="col-6">
        <h3>@taskDto.Name</h3>
        <p> @taskDto.Description</p>
        <h6> @taskDto.Importance</h6>

    </div>
                      


    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="button" @onclick="DeleteTask" class="btn btn-danger btn-lg">Delete</button>
        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="button" class="btn btn-danger btn-lg" @onclick="(() => Edit(taskDto))">Edit</button>
        </div>
    </div>
 </div>



                            

@code{

    [Parameter]
    public TaskDto taskDto { get; set; }

    [Parameter]
    public  EventCallback<Guid>DeleteId{ get; set; }
    [Parameter]

    public EventCallback<TaskDto> EditTask { get; set; }


    public async Task DeleteTask()
    {
        await DeleteId.InvokeAsync(taskDto.Id);
    }

    public async Task Edit(TaskDto editTask)
    {
        await EditTask.InvokeAsync(editTask);
        Console.WriteLine(editTask.Id);
    }


}